{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./lib",
        "rootDir": "./",
        "sourceMap": true,
        "composite": true,
        "incremental": true,
        "declarationMap": true,
        "paths": {
            "@flywave/flywave-datasource-protocol": ["../flywave-datasource-protocol/src"],
            "@flywave/flywave-geojson-datasource": ["../flywave-geojson-datasource/src"],
            "@flywave/flywave-geoutils": ["../flywave-geoutils/src"],
            "@flywave/flywave-utils": ["../flywave-utils/src"],
            "@flywave/flywave-vectortile-datasource": ["../flywave-vectortile-datasource/src"],
            "@flywave/flywave-mapview": ["../flywave-mapview/src"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["dist/**", "test/**", "node_modules"],
    "references": [
        {
            "path": "../flywave-datasource-protocol"
        },
        {
            "path": "../flywave-geojson-datasource"
        },
        {
            "path": "../flywave-geoutils"
        },
        {
            "path": "../flywave-mapview"
        },
        {
            "path": "../flywave-vectortile-datasource"
        },
        {
            "path": "../flywave-utils"
        }
    ]
}
