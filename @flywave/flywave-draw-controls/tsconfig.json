{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./lib",
        "rootDir": "./",
        "composite": true,
        "sourceMap": true,
        "declarationMap": true,
        "paths": {
            "@flywave/flywave-utils": ["../flywave-utils/src"],
            "@flywave/flywave-geoutils": ["../flywave-geoutils/src"],
            "@flywave/flywave-geoutils/*": ["../flywave-geoutils/src/*"],
            "@flywave/flywave-mapview": ["../flywave-mapview/src"],
            "@flywave/flywave-mapview/*": ["../flywave-mapview/src/*"],
            "@flywave/flywave-test-utils": ["../flywave-test-utils/src"],
            "@flywave/flywave-test-utils/*": ["../flywave-test-utils/src/*"],
            "@flywave/flywave-map-controls": ["../flywave-map-controls/src"],
            "@flywave/flywave-map-controls/*": ["../flywave-map-controls/src/*"],
            "@flywave/flywave-datasource-protocol": ["../flywave-datasource-protocol/src"],
            "@flywave/flywave-datasource-protocol/*": ["../flywave-datasource-protocol/src/*"],
            "@flywave/flywave-text-canvas": ["../flywave-text-canvas/src"],
            "@flywave/flywave-text-canvas/*": ["../flywave-text-canvas/src/*"]
        }
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["dist/**", "node_modules"],
    "references": [
        {
            "path": "../flywave-geoutils"
        },
        {
            "path": "../flywave-mapview"
        },
        {
            "path": "../flywave-utils"
        },
        {
            "path": "../flywave-test-utils"
        },
        {
            "path": "../flywave-map-controls"
        },
        {
            "path": "../flywave-datasource-protocol"
        },
        {
            "path": "../flywave-text-canvas"
        }
    ]
}
