{
    "name": "flywave.gl",
    "version": "0.0.1",
    "description": "Core render components of flywave.gl, an open-source 3D map rendering engine.",
    "private": true,
    "license": "Apache-2.0",
    "author": {
        "name": "flywave.gl contributors",
        "url": "https://flywave.net"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/flywave/flywave.gl.git"
    },
    "engines": {
        "node": ">=22.15.0",
        "pnpm": ">=9.0.0"
    },
    "packageManager": "pnpm@9.15.0",
    "workspaces": [
        "@flywave/*",
        "test/performance",
        "test/rendering"
    ],
    "scripts": {
        "pre-test": "pnpm run code-pre-tests --forbid-only && pnpm run prettier && pnpm eslint",
        "code-pre-tests": "ts-mocha --no-timeouts ./test/*.ts",
        "test": "pnpm karma-headless",
        "test-debug": "karma start --browser ChromeDebug --no-single-run --auto-watch",
        "test-browser": "pnpm karma-browser",
        "test-cov": "pnpm karma-headless --coverage",
        "performance-test-node": "ts-mocha ./test/performance/**/*.ts",
        "karma-headless": "karma start --browsers ChromeHeadless",
        "karma-headless-firefox": "karma start --browsers FirefoxHeadless",
        "karma-browser": "karma start --browsers Chrome --no-single-run",
        "build": "pnpm workspaces run build && pnpm run build-bundle",
        "build-examples": "webpack --config @flywave/flywave-examples/webpack.config.ts",
        "build-bundle": "cd @flywave/flywave.gl && webpack",
        "build-tests": "webpack --config ./webpack.tests.config.js",
        "start": "pnpm --filter @flywave/flywave-examples run tsc && pnpm --filter @flywave/flywave-examples run start",
        "start-tests": "webpack serve --config ./webpack.tests.config.js",
        "cleanup": "tsc --build --clean",
        "run-rendering-tests": "./scripts/rendering-tests-reference-platform.sh",
        "save-reference-rendering-tests": "npx ts-node @flywave/flywave-test-utils/lib/rendering/RenderingTestResultCli.ts save-reference",
        "approve-reference-rendering-tests": "npx ts-node @flywave/flywave-test-utils/lib/rendering/RenderingTestResultCli.ts approve",
        "docs": "ts-node ./scripts/apidocs.ts",
        "docs:build": "pnpm run docs &&pnpm --filter @flywave/flywave-examples run tsc && pnpm --filter @flywave/flywave-gl-docs run build",
        "docs:serve": "pnpm run docs:build && pnpm --filter @flywave/flywave-gl-docs run serve",
        "docs:deploy": "pnpm run docs:build && pnpm --filter @flywave/flywave-gl-docs run deploy",
        "docs:start": "pnpm --filter @flywave/flywave-gl-docs run start",
        "docs:validate": "pnpm run docs && pnpm --filter @flywave/flywave-gl-docs run docs:validate",
        "docs:check-links": "pnpm run docs && pnpm --filter @flywave/flywave-gl-docs run docs:check-links",
        "prettier": "prettier -l \"**/*.(ts|tsx|json)\"",
        "prettier:fix": "prettier --write \"**/*.(ts|tsx|json)\"",
        "eslint": "eslint --ext .ts ./@flywave test scripts",
        "eslint:fix": "eslint --fix --ext .ts ./@flywave test scripts",
        "postinstall": "pnpm --filter @flywave/flywave-datasource-protocol run generate-json-schema",
        "prepare-doc-deploy": "ts-node ./scripts/prepare_doc_deploy.ts",
        "publish-packages": "lerna publish",
        "publish-from-git": "lerna publish from-git",
        "publish-from-package": "lerna publish from-package",
        "version-packages": "lerna version"
    },
    "devDependencies": {
        "@microsoft/api-extractor": "catalog:",
        "@microsoft/api-documenter": "catalog:",
        "@types/chai": "catalog:",
        "@types/copy-webpack-plugin": "catalog:",
        "@types/express": "catalog:",
        "@types/fs-extra": "catalog:",
        "@types/glob": "catalog:",
        "@types/mocha": "catalog:",
        "@types/node": "catalog:",
        "@types/semver": "catalog:",
        "@types/sinon": "catalog:",
        "@types/stats.js": "catalog:",
        "@types/three": "catalog:",
        "@typescript-eslint/eslint-plugin": "catalog:",
        "@typescript-eslint/parser": "catalog:",
        "chai": "catalog:",
        "commander": "catalog:",
        "copy-webpack-plugin": "catalog:",
        "cross-env": "catalog:",
        "eslint": "catalog:",
        "eslint-config-prettier": "catalog:",
        "eslint-config-standard-with-typescript": "catalog:",
        "eslint-plugin-import": "catalog:",
        "eslint-plugin-node": "catalog:",
        "eslint-plugin-prettier": "catalog:",
        "eslint-plugin-promise": "catalog:",
        "eslint-plugin-simple-import-sort": "catalog:",
        "eslint-plugin-standard": "catalog:",
        "express": "catalog:",
        "fork-ts-checker-webpack-plugin": "catalog:",
        "glob": "catalog:",
        "karma": "catalog:",
        "karma-chai": "catalog:",
        "karma-chrome-launcher": "catalog:",
        "karma-coverage": "catalog:",
        "karma-coverage-istanbul-reporter": "catalog:",
        "karma-mocha": "catalog:",
        "karma-webpack": "^5.0.1",
        "lodash.isequal": "catalog:",
        "mkpath": "catalog:",
        "mocha": "catalog:",
        "node-fetch": "catalog:",
        "nyc": "catalog:",
        "os-browserify": "catalog:",
        "prettier": "catalog:",
        "querystring-es3": "catalog:",
        "semver": "catalog:",
        "sinon": "catalog:",
        "stream-browserify": "catalog:",
        "three": "^0.178.0",
        "ts-loader": "catalog:",
        "ts-mocha": "catalog:",
        "ts-node": "catalog:",
        "typescript": "catalog:",
        "webpack": "catalog:",
        "webpack-cli": "catalog:",
        "webpack-dev-server": "catalog:"
    },
    "peerDependencies": {
        "three": "catalog:"
    },
    "resolutions": {
        "three": "catalog:"
    },
    "dependencies": {
        "earcut": "^3.0.2"
    }
}