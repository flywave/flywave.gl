{
    "packages": [
        "@flywave/*"
    ],
    "version": "independent",
    "npmClient": "pnpm",
    "command": {
        "publish": {
            "ignoreChanges": [
                "test/**",
                "README.md",
                "docs/**",
                "**/package-lock.json",
                "**/yarn.lock",
                "**/pnpm-lock.yaml"
            ],
            "registry": "https://registry.npmjs.org/",
            "skipPrivate": true,
            "message": "chore(release): publish %v"
        },
        "version": {
            "exact": true,
            "forceGitTag": true,
            "ignoreChanges": [
                "test/**",
                "README.md",
                "docs/**",
                "**/package-lock.json",
                "**/yarn.lock",
                "**/pnpm-lock.yaml"
            ]
        }
    },
    "npmClientArgs": ["--no-git-tag-version"]
}